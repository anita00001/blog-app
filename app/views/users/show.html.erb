<div class="main">
  <div class="user-wrapper">
    <img src="<%= @user.photo %>" alt="user image" class="user-image">
    <div class = "user-info">
      <h1 class="user-name"><%= link_to @user.name, users_path %></h1>
      <p class= "post-count">Number of posts: <%= @user.posts.count %></p>
    </div>
  </div>

  <div class="bio-wrapper">
    <h3>Bio</h3>
    <p class = "user-bio"><%= @user.bio %></p>
  </div>

  <div class="post-wrapper">
    <% @user.most_recent_posts.each_with_index do |post, index| %>
      <div class="recent-posts"><%= 'hidden' if index >= 3 %>
        <h3>Post #<%= index + 1 %></h3>
        <p class="user-post"><%= link_to post.text, user_post_path(@user, post) %></p>

        <div class="counter-wrapper">
          <p>Comments: <%= post.comments.count %>,&nbsp;</p>
          <p>Likes: <%= post.likes.count %></p>
        </div>
      </div>
    <% end %>
  </div>

  <button class="see-all-posts"><%= link_to "See All Posts", user_posts_path(@user) %></button>
</div>