<div class="main">
  <div class="post-details">
    <h3>
      Post #<%= @index %>
      by <%= link_to @user.name, "/users" %>
    </h3>

    <div class="counter-wrapper">
      <p>Comments: <%= @post.comments.count %>,&nbsp;</p>
      <p>Likes: <%= @post.likes.count %></p>
    </div>

    <p><%= @post.text %></p>
  </div>

  <div class = "all-comments">
    <% @post.comments.each do |comment| %>
      <p><%= comment.user.name %>:
      <%= comment.text %></p>
    <% end %>
  </div>
</div>